# Database
DATABASE_URL="postgresql://user:password@host:5432/genki_tcg?sslmode=require"

# Redis (optional - for rate limiting and caching)
REDIS_URL="rediss://default:password@host:6379"

# JWT Authentication
JWT_SECRET="REPLACE_WITH_64_CHARACTER_RANDOM_STRING_GENERATED_BY_OPENSSL_RAND_BASE64_64"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_SECRET="REPLACE_WITH_64_CHARACTER_RANDOM_STRING_GENERATED_BY_OPENSSL_RAND_BASE64_64"
REFRESH_TOKEN_EXPIRES_IN="90d"

# Discord OAuth (Required for Discord login)
# Get from: https://discord.com/developers/applications/1441953820820373639
DISCORD_CLIENT_ID="1441953820820373639"
DISCORD_CLIENT_SECRET="your-discord-client-secret-from-portal"
# Comma-separated list of allowed redirect URIs for security
DISCORD_ALLOWED_REDIRECTS="https://your-api.railway.app/auth/discord/callback,https://your-api.railway.app/auth/discord/mobile-callback,genki-tcg://discord/callback,genki-tcg://auth/callback"

# Application
NODE_ENV="production"
API_PORT="3000"
# Base URL of your API (used for OAuth redirects)
API_URL="https://your-api.railway.app"

# CORS - Allowed origins (comma-separated)
# Supports wildcards: https://*.vercel.app
CORS_ORIGINS="https://admin.yourdomain.com,https://*.vercel.app,genki-tcg://"

# Rate Limiting
THROTTLE_TTL="60"
THROTTLE_LIMIT="100"

# File Storage (optional - for decklist uploads)
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="genki-tcg-uploads"

# Monitoring (optional)
# SENTRY_DSN="https://your-sentry-dsn"
# LOGTAIL_SOURCE_TOKEN="your-logtail-token"

# Email (optional - for notifications)
# SMTP_HOST="smtp.sendgrid.net"
# SMTP_PORT="587"
# SMTP_USER="apikey"
# SMTP_PASS="your-sendgrid-api-key"
# EMAIL_FROM="noreply@yourdomain.com"

# Push Notifications (optional)
# EXPO_ACCESS_TOKEN="your-expo-access-token"
