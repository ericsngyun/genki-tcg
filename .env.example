# Database (DEPRECATED - Configure in apps/backend/.env)
DATABASE_URL="postgresql://user:password@localhost:5432/genki_tcg"

# Test Database (DEPRECATED - Configure in apps/backend/.env)
TEST_DATABASE_URL="postgresql://user:password@localhost:5432/genki_tcg_test"

# Redis (DEPRECATED - Configure in apps/backend/.env)
REDIS_URL="redis://localhost:6379"

# ============================================================================
# Discord OAuth (Primary Authentication)
# ============================================================================
# Get these from: https://discord.com/developers/applications
# 1. Create a new application (or use existing)
# 2. Go to OAuth2 > General
# 3. Copy Client ID and Client Secret
# 4. Add redirect URLs to OAuth2 > Redirects (see below)

DISCORD_CLIENT_ID="your-discord-application-id"
DISCORD_CLIENT_SECRET="your-discord-client-secret"

# Callback URL - must match one of the URLs in Discord Developer Portal
# Development: http://localhost:3001/auth/discord/callback
# Production: https://your-api-domain.com/auth/discord/callback
DISCORD_CALLBACK_URL="http://localhost:3001/auth/discord/callback"

# Discord Developer Portal - Required Redirect URLs:
# Development:
#   - http://localhost:3001/auth/discord/callback
#   - http://localhost:3000/auth/discord/callback
#   - http://localhost:3000
#   - genki-tcg://auth/discord/callback
# Production:
#   - https://your-api.railway.app/auth/discord/callback
#   - https://admin.yourdomain.com/auth/discord/callback
#   - genki-tcg://auth/discord/callback

# ============================================================================
# Alternative Auth Providers (Optional)
# ============================================================================
# Option 1: Clerk
# CLERK_SECRET_KEY="sk_test_..."
# NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."

# Option 2: Supabase Auth
# SUPABASE_URL="https://xxx.supabase.co"
# SUPABASE_ANON_KEY="eyJ..."
# SUPABASE_SERVICE_ROLE_KEY="eyJ..."

# JWT (REQUIRED - Generate with: openssl rand -base64 64)
# SECURITY WARNING: You MUST set this to a secure random value
# The application will not start without a proper JWT_SECRET
JWT_SECRET="REPLACE_WITH_SECURE_SECRET_GENERATED_BY_OPENSSL_RAND_BASE64_64"
JWT_EXPIRES_IN="15m"

# Refresh Token (Generate with: openssl rand -base64 64)
# This should be DIFFERENT from JWT_SECRET
REFRESH_TOKEN_SECRET="REPLACE_WITH_DIFFERENT_SECURE_SECRET_GENERATED_BY_OPENSSL_RAND_BASE64_64"
REFRESH_TOKEN_EXPIRES_IN="7d"

# API
API_PORT=3001
API_URL="http://localhost:3001"

# CORS - Comma-separated list of allowed origins
# For production, set this to your actual frontend URLs
# Supports wildcards: https://*.vercel.app
CORS_ORIGINS="http://localhost:3000,http://localhost:8081,genki-tcg://"

# Admin Web
NEXT_PUBLIC_API_URL="http://localhost:3001"

# Mobile
EXPO_PUBLIC_API_URL="http://localhost:3001"

# Push Notifications (Expo)
EXPO_ACCESS_TOKEN="your-expo-token"

# Observability
SENTRY_DSN=""
SENTRY_ORG=""
SENTRY_PROJECT=""

# Organization
DEFAULT_ORG_SLUG="genki"
DEFAULT_INVITE_CODE="GENKI"

# Node Environment
NODE_ENV="development"
