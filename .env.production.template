# ============================================================================
# Genki TCG - Production Environment Variables Template
# ============================================================================
# Copy this file and fill in the actual values for production deployment
# Never commit actual .env files with real secrets to version control!
# ============================================================================

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL="postgresql://user:password@host:5432/genki_tcg_production?schema=public"

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
JWT_SECRET="CHANGE_ME_LONG_RANDOM_STRING_FOR_JWT_TOKENS"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="CHANGE_ME_DIFFERENT_LONG_RANDOM_STRING"
JWT_REFRESH_EXPIRES_IN="7d"

# Discord OAuth (for social login)
DISCORD_CLIENT_ID="your_discord_app_client_id"
DISCORD_CLIENT_SECRET="your_discord_app_client_secret"
DISCORD_REDIRECT_URI="https://your-production-domain.com/discord/callback"

# ============================================================================
# ENVIRONMENT
# ============================================================================
NODE_ENV="production"
API_PORT="3001"
PORT="3001"  # Railway uses PORT

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS="https://your-production-domain.com,https://admin.your-domain.com"

# ============================================================================
# RATE LIMITING
# ============================================================================
THROTTLE_TTL="60000"    # Time window in milliseconds (60 seconds)
THROTTLE_LIMIT="100"    # Max requests per window

# ============================================================================
# ERROR TRACKING (Sentry)
# ============================================================================
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ORG="your-organization-slug"
SENTRY_PROJECT_BACKEND="genki-tcg-backend"
SENTRY_PROJECT_MOBILE="genki-tcg-mobile"

# Sentry Auth Token (for uploading source maps)
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# ============================================================================
# REDIS (for caching and sessions)
# ============================================================================
REDIS_URL="redis://default:password@host:6379"

# ============================================================================
# EMAIL (Optional - for notifications)
# ============================================================================
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"
# SMTP_FROM="Genki TCG <noreply@your-domain.com>"

# ============================================================================
# FRONTEND APPS (Mobile & Admin Web)
# ============================================================================

# Mobile App
EXPO_PUBLIC_API_URL="https://api.your-domain.com"
EXPO_PUBLIC_SENTRY_DSN="https://your-mobile-sentry-dsn@sentry.io/project-id"
EXPO_PUBLIC_ENVIRONMENT="production"

# Admin Web
NEXT_PUBLIC_API_URL="https://api.your-domain.com"
NEXT_PUBLIC_SENTRY_DSN="https://your-admin-sentry-dsn@sentry.io/project-id"

# ============================================================================
# DEPLOYMENT (Railway)
# ============================================================================
# These are automatically set by Railway, but documented here for reference
# RAILWAY_ENVIRONMENT="production"
# RAILWAY_PROJECT_ID="your-railway-project-id"
# RAILWAY_SERVICE_ID="your-railway-service-id"

# ============================================================================
# NOTES
# ============================================================================
# 1. Generate strong random strings for JWT secrets:
#    openssl rand -base64 64
#
# 2. Set up Discord OAuth app at: https://discord.com/developers/applications
#
# 3. Set up Sentry projects at: https://sentry.io
#
# 4. Railway PostgreSQL is provisioned automatically with DATABASE_URL
#
# 5. For production, use environment-specific values in Railway dashboard
#
# 6. Test all environment variables in staging before production deployment
